service cloud.firestore {
  match /databases/{database}/documents {

  	match /events/{event} {
    	allow read: if request.auth != null && request.auth.token.level >= 2;
      allow write: if request.auth != null && request.auth.token.level >= 3;
      
      match /matches/{key} {
      	allow read, write: if request.auth != null && request.auth.token.level >= 2;
      }
    }
  
    // match /{document=**} {
    //   allow read, write;
    // }
  }
}